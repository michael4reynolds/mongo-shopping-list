{
  "name": "mongo-shopping-list",
  "version": "1.0.0",
  "description": "Shopping list with MongoDB and Node",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon --exec babel-node src/server.js",
    "prestart": "babel src -s -d dist",
    "start": "node dist/server.js",
    "debug": "babel-node-debug src/server.js",
    "test": "mocha test/test-server.js --compilers js:babel-core/register"
  },
  "keywords": [],
  "author": "Michael Reynolds <michael4reynolds@gmail.com",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.1",
    "express": "^4.13.4",
    "mongoose": "^4.4.20"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-2": "^6.5.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "eslint": "^2.11.1",
    "mocha": "^2.5.3",
    "nodemon": "^1.9.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "mocha": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-console": 0,
      "semi": [
        "warn",
        "never"
      ]
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  }
}
